<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/member_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="Name Surname"
        android:textColor="@color/member_name"
        app:layout_constraintEnd_toEndOf="@+id/member_image"
        app:layout_constraintStart_toStartOf="@+id/member_image"
        app:layout_constraintTop_toBottomOf="@id/member_image" />

    <TextView
        android:id="@+id/member_role"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="Name Surname"
        android:textColor="@color/member_role"
        app:layout_constraintEnd_toEndOf="@+id/member_image"
        app:layout_constraintStart_toStartOf="@+id/member_image"
        app:layout_constraintTop_toBottomOf="@id/member_name" />


</androidx.constraintlayout.widget.ConstraintLayout>